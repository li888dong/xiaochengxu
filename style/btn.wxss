
/*btn*/
button{
	display: inline-block;
}
.btn_wrap{
  width: 90%;
  margin: 0 auto;
}

button::after {
	content: "";
	border: 0 !important
}

.btn {
	display: inline-block;
	margin-bottom: 0;
	font-size: 36rpx;
	font-weight: 400;
  height: 110rpx;
	line-height: 110rpx;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	-ms-touch-action: manipulation;
	touch-action: manipulation;
	cursor: pointer;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	background-image: none;
	border: 2rpx solid transparent;
	border-radius: 0;
}


.lg-btn{
  width: 100%;
}

.sm-btn{
  width: 50%;
}

.btn-radius{
  border-radius: 8rpx;
}

.red-btn{
  background: #D70E19;
  color: #fff;
}

.red-btn.dis, .red-btn.disabled{
	background: rgba(215, 14, 25, .3);
}

.red-hover{
	background: #b40711;
}
